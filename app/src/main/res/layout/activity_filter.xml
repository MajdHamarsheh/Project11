<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content activity -->
    <include layout="@layout/activity_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/filterLayout" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/Theme.AppCompat.Dialog"
        android:id="@+id/filterLayout"
        tools:context=".Filter">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/Brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nbrand"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/darkgray"/>
            <LinearLayout
                android:id="@+id/layoutBrandChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <CheckBox
                    android:id="@+id/checkbox_brand1"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/font1"
                    android:layout_height="wrap_content"
                    android:text="@string/toyota"
                    android:button="@drawable/custom_checkbox"
                    android:layout_marginStart="20dp"
                    android:drawableStart="@drawable/toyota"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/honda"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableStart="@drawable/honda"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/custom_checkbox"
                    android:text="@string/ford"
                    android:fontFamily="@font/font1"
                    android:drawableStart="@drawable/ford"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chevrolet"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/chevrolet"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BMW"
                    android:button="@drawable/custom_checkbox"
                    android:drawableLeft="@drawable/bmw"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand6"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/ben"
                    android:layout_height="wrap_content"
                    android:text="Mercedes-Benz"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audi"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/audi"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nissan"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/nissan"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hyundai"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/hyundai"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volkswagen"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/volkswagen"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <!-- Additional Popular Car Brands -->
                <CheckBox
                    android:id="@+id/checkbox_brand11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lexus"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/lexus"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subaru"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/subaru"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mazda"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/mazda"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kia"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/kia"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jeep"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/jeep"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tesla"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/tesla"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Porsche"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/porsche"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaguar"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/jaguar"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferrari"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/ferrari"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_brand20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lamborghini"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/lamborghini"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <TextView
                android:id="@+id/Fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nFuel: \n"
                android:padding="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/font1"
                android:textColor="@color/darkgray"/>
            <LinearLayout
                android:id="@+id/layoutFuelChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <CheckBox
                    android:id="@+id/checkboxFuel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gasoline"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/diesel"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxFuel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/diesel"
                    android:text="Diesel"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxFuel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electric"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/plug"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxFuel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hybrid"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:drawableLeft="@drawable/fuel"
                    android:textColor="@color/darkgray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Transmission"
                android:text="\nTransmission: \n"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textSize="18sp"
                android:padding="10dp"
                android:textColor="@color/darkgray"/>
            <LinearLayout
                android:id="@+id/layoutTransmissionChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <CheckBox
                    android:id="@+id/checkboxTransmission1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatic"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxTransmission2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="\nSeats: \n"
                android:id="@+id/Seats"
                android:padding="10dp"
                android:fontFamily="@font/font1"
                android:textSize="18sp"
                android:textColor="@color/darkgray"/>
            <LinearLayout
                android:id="@+id/layoutSeatsChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <CheckBox
                    android:id="@+id/checkboxSeat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Seats"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/carseat"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxSeat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Seats"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/carseat"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxSeat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Seats"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/carseat"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxSeat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 Seats"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/carseat"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkboxSeat5"
                    android:layout_width="wrap_content"
                    android:drawableLeft="@drawable/carseat"
                    android:layout_height="wrap_content"
                    android:text="8 Seats"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\nColor: \n"
                android:id="@+id/Color"
                android:padding="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:textColor="@color/darkgray"/>
            <LinearLayout
                android:id="@+id/layoutColorChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"

                >

                <CheckBox
                    android:id="@+id/checkbox_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Red"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/red"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>
                <CheckBox
                    android:id="@+id/checkbox_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Green"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/green"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Blue"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/blue"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

                <CheckBox
                    android:id="@+id/checkbox_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" White"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/white"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>
                <CheckBox
                    android:id="@+id/checkbox_silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Silver"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/silver"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>
                <CheckBox
                    android:id="@+id/checkbox_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Black"
                    android:button="@drawable/custom_checkbox"
                    android:fontFamily="@font/font1"
                    android:drawableLeft="@drawable/black"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/darkgray"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/font1"
                android:id="@+id/Price"
                android:text="\nPrice per day: \n"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="@color/darkgray"/>

            <LinearLayout
                android:id="@+id/layoutPriceChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/min_value_text"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="50dp"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:text="100" />

                    <TextView
                        android:id="@+id/max_value_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:textSize="15dp"
                        android:layout_marginStart="150dp"
                        android:text="3000" />
                </LinearLayout>
                <org.florescu.android.rangeseekbar.RangeSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/priseseekbar"
                    app:absoluteMinValue="3000"
                    app:absoluteMaxValue="100"
                    ></org.florescu.android.rangeseekbar.RangeSeekBar>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green" />
            <Button
                android:id="@+id/button_apply_filter"
                style="@style/AddStyle"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_button"
                android:text="Apply Filter"
                android:textColor="@color/darkgray"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button_clear_filter"
                style="@style/AddStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button"
                android:paddingBottom="10dp"
                android:text="Clear Form"
                android:textColor="@color/darkgray"
                android:textStyle="italic" />
        </LinearLayout>

    </ScrollView>
    <include layout="@layout/filter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

</RelativeLayout>
