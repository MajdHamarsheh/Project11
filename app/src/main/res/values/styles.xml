<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Define custom style for the date picker dialog -->
    <style name="DatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
    </style>

    <style name="BtnsStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:fontFamily">@font/font2</item>
        <item name="android:textSize">23dp</item>
    </style>


    <style name="ChooserBtnShape">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:backgroundTint">@color/lightestGreen</item>
        <item name="android:fontFamily">@font/font2</item>
        <item name="android:textSize">25dp</item>
        <item name="android:shape">rectangle</item>
        <item name="android:strokeColor">@color/white</item>
    </style>

    <style name="AddStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/font1</item>
    </style>
    <!-- =====================AddStyle2 Used In AddCarActivity=================== -->
    <style name="AddStyle2">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/font3</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/font1</item>
    </style>
    <!-- =====================conactStyle Used In ContactUsActivity=================== -->
    <style name="ContactStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/font1</item>
    </style>

    <style name="ReqStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/font1</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="HintStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/font1</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/lightestGreen</item>
        <item name="android:fontFamily">@font/font2</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColorPrimary">@color/darkgray</item>
        <item name="android:colorAccent">@color/gray</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Your existing AppTheme with custom date picker theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialCalendarTheme">@style/DatePickerDialogTheme</item> <!-- Apply custom date picker theme here -->
        <item name="materialCalendarFullscreenTheme">@style/DatePickerDialogTheme</item> <!-- Apply custom date picker theme here -->
    </style>

</resources>
